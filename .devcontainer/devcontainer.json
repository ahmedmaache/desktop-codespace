{
  "name": "Desktop Codespace",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "version": "latest",
      "password": "vscode",
      "webPort": "6080",
      "vncPort": "5901"
    }
  },
  "forwardPorts": [6080, 5901],
  "portsAttributes": {
    "6080": {
      "label": "Desktop (Web)",
      "onAutoForward": "notify"
    },
    "5901": {
      "label": "Desktop (VNC)",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "echo 'âœ… Desktop environment ready! Access via port 6080 (web) or 5901 (VNC). Password: vscode'",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}
