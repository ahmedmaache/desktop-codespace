{
  "name": "Desktop Codespace with RDP",
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "features": {
    "ghcr.io/devcontainers/features/desktop-lite:1": {
      "version": "latest",
      "password": "vscode",
      "webPort": "6080",
      "vncPort": "5901"
    }
  },
  "forwardPorts": [
    3389,
    6080,
    5901
  ],
  "portsAttributes": {
    "3389": {
      "label": "Desktop (RDP)",
      "onAutoForward": "notify"
    },
    "6080": {
      "label": "Desktop (Web/noVNC)",
      "onAutoForward": "silent"
    },
    "5901": {
      "label": "Desktop (VNC)",
      "onAutoForward": "silent"
    }
  },
  "postCreateCommand": "chmod +x .devcontainer/setup-xrdp.sh && .devcontainer/setup-xrdp.sh",
  "postStartCommand": "sudo /usr/sbin/xrdp || true",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode-remote.remote-containers"
      ]
    }
  }
}